@using NoteApplication.Entities.Messages
@model List<ErrorMessageObject>

@{
    ViewBag.Title = "Invalid Proccess";
}

<link href="~/Content/login-register.css" rel="stylesheet" />

<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">You are being redricted</h1>
            </div>
            <div class="main-content">
                <div class="text-danger">
                    <h2><span class="glyphicon glyphicon-remove"></span>  Invalid Proccess </h2>
                    <hr />
                    <p class=" text-justify">
                        @foreach (ErrorMessageObject err in Model)
                        {
                            @err.ErrorMessage<br />
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>


<script>
    $(function () {
        $("footer").parent().hide();

        setTimeout(function () {
            window.location = "/Home/Index";
        }, 5000);
    });
</script>